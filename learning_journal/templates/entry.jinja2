{% extends "base.jinja2" %}
{%block content%}

<section id="entry-view">
    <h2>{{ entry.title }}</h2>
    <h4>{{ entry.time }}</h4>

    {% if request.has_permission('edit') %}
    <h5><a href={{ request.route_url('edit_entry', entry=entry.id) }} id="edit-link">Edit This Post</a></h5>
    {% endif %}
    
    <p>{{ entry.text }}</p>


</section>
{%endblock content%}


