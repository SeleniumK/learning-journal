{% extends "base.jinja2" %}
{%block content%}

<section id="entry-view">
    <h2>{{ entry.title }}</h2>
    <h4>{{ entry.time }}</h4>
    <p>{{ entry.text }}</p>
    <h5><a href={{ request.route_url('edit_entry', entry=entry.id) }} id="edit-link">Edit This Post</a></h5>
    {% if logged_in %}
    <a href="{{ request.application_url }}/logout">Logout</a>
    {% endif %}

</section>
{%endblock content%}


