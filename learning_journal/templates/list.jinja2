{% extends "base.jinja2" %}
{% block content %}
<section id="list-articles">
    <ul>
    	{% if entries %}
        {% for entry in entries%}
        <li>
           <a href= {{ request.route_url("entry", entry=entry.id) }}>
            <h3 class="entry-title">{{ entry.title }}:</h3>
            <p class="created">{{ entry.created }}</p>
           </a>
        </li>
        {% endfor %}
        {% else %}
        <p>No entries here so far</p>
        {% endif %}
    </ul>
    {% if not logged_in %}
    <a href= {{ request.route_url("login")}}> Log in! </a>
    {% endif %}
</section>
{% endblock %}
