{% extends "base.jinja2" %}
{% block content %}
  <div class="content">
    <h3> Login </h3>
    {% if message %}
    <h4>{{ message }}</h4
    {% endif %}
    <form action="{{ url }}" method="post">
      <input type="hidden" name="came_from" value="{{ came_from }}">
      {{ form.username.title }}
      {{ form.username }}
      {{ form.password.title }}
      {{ form.password }}
      <button type="submit" name="form.submitted" value="Log In" class="btn btn-default">Log In</button>
    </form>
  </div>

{% endblock content %}
